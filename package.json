{
  "name": "EP2P",
  "version": "0.0.1",
  "description": "一个基于Electron和Vue3的多节点跨网络P2P文件传输应用",
  "main": "dist-electron/main.cjs",
  "author": "sumu126",
  "scripts": {
    "dev": "vite",
    "build": "node ./build.mjs",
    "preview": "vite preview",
    "electron:dev": "npm run build && concurrently -k -n \"VITE,ELECTRON\" \"npm run dev\" \"node scripts/delay-electron.js\"",
    "electron:build": "npm run build && electron-builder --dir",
    "electron:build-win": "npm run build && electron-builder --win --config",
    "electron:build-win-simple": "node build-app.js",
    "electron:start": "electron . --no-sandbox"
  },
  "keywords": [
    "Electron",
    "Vue3",
    "Framework"
  ],
  "build": {
    "appId": "com.electron-vue3.demo",
    "productName": "EP2P",
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json",
      "assets/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "dist/"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Electron-Vue3 Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.0.0",
    "execa": "^7.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@vueuse/core": "^10.0.0",
    "dotenv": "^17.2.3",
    "pinia": "^2.0.0",
    "qr-image": "^3.2.0",
    "qrcode": "^1.5.4",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "uuid": "^13.0.0",
    "vue": "^3.0.0"
  }
}
